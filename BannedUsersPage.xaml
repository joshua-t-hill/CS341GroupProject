<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CS341GroupProject.BannedUsersPage"
             Title="Banned Users">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

		<ListView x:Name="BannedUsersListView" SelectionMode="Single">
			<ListView.ItemTemplate>
				<DataTemplate>
					<ViewCell>
						<Frame Padding="10" VerticalOptions="Center" HorizontalOptions="FillAndExpand">
							<Label Text="{Binding Name}" VerticalOptions="Center" HorizontalOptions="CenterAndExpand" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
						</Frame>
					</ViewCell>
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>


		<Button Grid.Row="1" Text="Unban User" Clicked="OnUnbanClicked" />

    </Grid>
</ContentPage>
