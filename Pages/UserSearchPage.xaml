<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CS341GroupProject.UserSearchPage"
             Title="User Search">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="Auto"/>
		</Grid.ColumnDefinitions>

		<SearchBar x:Name="UserSearchBar" Grid.Column="0" Placeholder="Search for a user..." TextChanged="OnSearchTextChanged" />

		<Button x:Name="BanButton" Grid.Column="1" Text="Ban" IsEnabled="False" Clicked="OnBanButtonClicked"/>

		<ListView x:Name="UsersListView" Grid.Row="1" Grid.ColumnSpan="2" SelectionMode="Single" ItemSelected="OnUserSelected">
			<ListView.ItemTemplate>
				<DataTemplate>
					<TextCell Text="{Binding Name}" />
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>
	</Grid>
</ContentPage>
