<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CS341GroupProject.Pages.CreateAccountPage">
    <VerticalStackLayout
        Spacing="25"
        Padding="30,0"
        VerticalOptions="Center">
        
        <Label 
            VerticalOptions="Center" 
            HorizontalOptions="Center" >
            <Label.FormattedText>
                <FormattedString>
                    <Span Text="Create an account" FontSize="Large"/>
                </FormattedString>
            </Label.FormattedText>
        </Label>

        <Entry
            x:Name="UsernameENT"
            Placeholder="Username" />

        <Entry
            x:Name="EmailENT"
            Placeholder="Email" />

        <Entry
            x:Name="PasswordENT"
            Placeholder="Password" />

        <Button
            Text="Next"
            Clicked="OnNextBtnClicked"
            HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>