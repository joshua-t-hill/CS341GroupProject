<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CS341GroupProject.Pages.SetNewPasswordPage"
             Title="Set New Password">
    <VerticalStackLayout
        Spacing="25"
        Padding="30,0"
        VerticalOptions="Center">

        <Label
            FontSize="Medium"
            Text="You have entered a temporary password. Please reset your password to whatever you would like below." />

        <Entry
            x:Name="NewPasswordENT"
            Placeholder="New Password" />
        
        <Entry
            x:Name="ConfirmPasswordENT"
            Placeholder="Confirm New Password" />
        
        <Button
            Text="Reset Password"
            Clicked="OnResetPasswordClicked"
            HorizontalOptions="Fill" />
    </VerticalStackLayout>
</ContentPage>