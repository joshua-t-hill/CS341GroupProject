<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CS341GroupProject.EmailAddressConfirmationPage"
             Title="EmailAddressConfirmationPage">
    <VerticalStackLayout>
       
        <Label Padding="0,140,0,0"
            Text="Thank you for creating your account."
            FontSize="30"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            />

        <Label Padding="0,70,0,0"
            Text="Please confirm your email, then hit next"
            FontSize="30"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            />

        <Label Padding="0,70,0,75"
            Text="Didn’t receive an email? Resend verification email"
            FontSize="30"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            />
        <Button 
            Text= "Try Again"
                VerticalOptions="Center"
                HorizontalOptions="Center"
           
                />
        <Label Padding="0,140,0,0"/>
        <Button 
            Text= "Next"
                VerticalOptions="Center"
                HorizontalOptions="CenterAndExpand"
                Padding="80,0"
                />

    </VerticalStackLayout>

</ContentPage>
