<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:CS341GroupProject"
             x:Class="CS341GroupProject.AdminPage"
             Title="ADMIN">


    <Grid Padding="20">

        <!-- List of Admin Options -->
        <StackLayout Grid.Row="1" Spacing="20">
            <Button x:Name="SearchUserButton" Text="Search Users" BackgroundColor="LightBlue" TextColor="White" HeightRequest="50" CornerRadius="10" Clicked="OnSearchClickedAsync" />
            <Button x:Name="BannedUserButton" Text="Banned Users" BackgroundColor="LightBlue" TextColor="White" HeightRequest="50" CornerRadius="10" Clicked="OnBanListClickedAsync"/>
        </StackLayout>

    </Grid>
</ContentPage>
